#!/usr/bin/env bash
#
# Shared functions

# shellcheck source=script/ask
source ./ask

# script variables
org_endpoint="https://$INSTANCE_URL/repos/$CLASS_ORG"
red=$(tput setaf 1)
green=$(tput setaf 2)
blue=$(tput setaf 4)
reset=$(tput sgr0)

print_error() {
  echo "${red}Error! $1${reset}"
}

print_success() {
  echo "${green}Success! $1${reset}"
}

print_done() {
  echo "${blue}Done! $1${reset}"
}

create_issue() {
  while (($#)); do
    case $1 in
    --repo) local repo=$2 ;;
    --title) local title=$2 ;;
    --body) local body=$2 ;;
    esac
    shift
  done

  curl -s -S -i -u "$TOKEN_OWNER:$TEACHER_PAT" \
    -d "{ \"title\": \"$title\", \"body\": \"$body\"}" \
    -X POST "$org_endpoint/$repo/issues" >>log.out 2>&1
}

create_pr() {
  while (($#)); do
    case $1 in
    --title) local title=$2 ;;
    --body) local body=$2 ;;
    --head) local head=$2 ;;
    --base) local base=$2 ;;
    --repo) local repo=$2 ;;
    esac
    shift
  done

  curl -s -S -i -u "$TOKEN_OWNER:$TEACHER_PAT" \
    -d "{ \"title\": \"$title\", \"body\": \"$body\", \"head\": \"$head\", \"base\": \"$base\"}" \
    -X POST "$org_endpoint/$repo/pulls" >>log.out 2>&1
}

get_collaborators() {
  local repo_name=$1
  local repo_endpoint="https://$INSTANCE_URL/repos/$CLASS_ORG/$repo_name"

  # Get array of repository collaborators
  IFS=" " read -ra collaborators <<<"$(
    curl -s -S -u "$TOKEN_OWNER:$TEACHER_PAT" \
      -X GET "$repo_endpoint/collaborators?affiliation=direct&per_page=100" |
      jq -r 'map(.login) | unique | @sh' | tr -d \'
  )" >>log.out 2>&1

  # Get array of repository invitees
  IFS=" " read -ra invitees <<<"$(
    curl -s -S -u "$TOKEN_OWNER:$TEACHER_PAT" -X GET "$repo_endpoint/invitations" |
      jq -r 'map(.invitee.login) | unique | @sh' | tr -d \'
  )" >>log.out 2>&1

  # Invitees are collaborators too
  collaborators+=("${invitees[@]}")
}
